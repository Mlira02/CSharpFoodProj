@model OdeToFood.Core.Restaurant

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a asp-page="./Detail" asp-route-restaurantId="@Model.Id" class="btn btn-lg">Details</a>
        <a asp-page="./Edit" asp-route-restaurantId="@Model.Id" class="btn btn-lg">Edit</a>
        <a asp-page="./Delete" asp-route-restaurantId="@Model.Id" class="btn btn-lg">Delete?</a>
    </div>
</div>